<nav class="navbar navbar-expand-lg navbar-dark bg-dark top-navbar">
  <%= link_to root_path, class: "logo" do %>
      <%= image_tag("logo.png") %> ThinkDigital
  <% end %>
  <ul class="navbar-nav ml-auto">
    <li class="nav-item search">
      <%= form_tag(products_path, :method => "get", id: "search-form") do %>
      <div class="input-group">
        <%= text_field_tag :search, params[:search], placeholder: "Search Products", class: "form-control" %>
        <span class="input-group-addon" id="basic-addon1">
          <i class="fa fa-search"></i>
        </span>
      </div>
      <% end %>
     </li> 
    <li class="nav-item">
      <%= link_to('Contact', contact_path, :class => "nav-link mr-4 text-white")  %>
