      <%= link_to('Logout', destroy_user_session_path, method: :delete, :class => "nav-link mr-4 text-white") %>      <% else %>
      <%= link_to('Login', new_user_session_path, :class => "nav-link mr-4 text-white")  %>
      <% end %>
